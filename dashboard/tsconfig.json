{
	"compilerOptions": {
		// Output related
		"target": "ES2015",
		"importHelpers": true,

		// Module resolution
		"moduleResolution": "node",

		// Type checking
		"lib": ["ES2015", "dom"],
		"alwaysStrict": true,
		"forceConsistentCasingInFileNames": true,
		"noFallthroughCasesInSwitch": true,
		"noImplicitAny": true,
		"noImplicitReturns": true,
		"noImplicitThis": true,
		"strictNullChecks": true,
		"skipLibCheck": true,

		"module": "ES2015",
		"types": [
			"node"
		]
	},
    "compileOnSave": true,
	"files": [
		"voteban.ts"
	],
	"exclude": [
		"../extension/config.ts"
	]
}